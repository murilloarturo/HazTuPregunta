<div class="well row">
	<div class="well span3">
		<div class="text-center">
			<%= image_tag @user.avatar.url(:thumb) , :class => "img-circle" %>
			<h5><%= @user.name+" "+@user.lname %></h5>
			<% if current_user.name == @user.name %>
				<%= link_to 'Editar Perfil', edit_user_registration_path(@user) %><br><br>
			<% end %>
		</div>
		<p>
			<%= link_to "Siguiendo: "+@user.follow_count.to_s, follow_show_path(:user_id => @user, :type => 'Siguiendo') %>
		</p>
		<p>
			<%= link_to "Seguidores: "+@user.followers_count.to_s, follow_show_path(:user_id => @user, :type => 'Seguidores')%>
		</p>
		<p>
			<%= link_to "Actividad", activities_show_path(:user_id => @user)%>
		</p>
		<p>
			Reputaci√≥n:  
		</p>
		<p>
			Favoritos:  
		</p>
		<p>
			Mejores Respuestas:  
		</p>
		<p>
			Antiguedad:  
		    <%= time_ago_in_words @user.created_at %>
		</p>
	</div>
	<div class="span7 text-center">
	<p class="text-center">
		<h2 class="text-center">Preguntas realizadas</h2>
	</p>

	<% current_user.questions.each do |question| %>
  		<h3> <%= link_to question.title, question %></h3>
		  Hace <%= time_ago_in_words question.created_at %>
		  por <%= link_to question.user.username, question.user %>
		  <p>
		  <%= link_to 'Detalles', question %> |
		  <%= pluralize(question.qcomments.count, 'Comentario' , 'Comentarios' )%> |
		  <%= pluralize(question.answers.count, 'Respuesta', 'Respuestas')%>
		  </p>
	<% end -%>
	</div>
</div>
