<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= link_to "Volver", :back %><br>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <label for="fil">
      Imagen de Perfil
    </label>
    <%= f.file_field :avatar, :id => "file"%>
    <%= f.input :username, :required => true, :autofocus => true %>
    <%= f.input :name, :required => true%>
    <%= f.input :lname, :required => true%>
    <%= f.input :email, :required => true%>
    <%= f.input :password, :autocomplete => "off", :hint => "En blanco si no desea cambiarla", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "Para confirmar sus datos ingrese su contraseña.", :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Actualizar" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>No quieres regresar? <%= link_to "Eliminar mi cuenta", registration_path(resource_name), :confirm => "¿Está seguro?", :method => :delete %>.</p>

